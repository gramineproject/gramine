SGX=@SGX@

case "$SGX" in 1) _GRAMINE=SGX ;; *) _GRAMINE=DIRECT ;; esac
eval PAL_CMD=\${MESON_DEVENV_GRAMINE_${_GRAMINE}_PAL_CMD:-@PAL_CMD@}
eval LIBPAL_PATH=\${MESON_DEVENV_GRAMINE_${_GRAMINE}_LIBPAL_PATH:-@LIBPAL_PATH@}
eval GRAMINE_GDB_PY=\${MESON_DEVENV_GRAMINE_${_GRAMINE}_GDB_PY:-@GRAMINE_GDB_PY@}
eval GRAMINE_GDB_SO=\${MESON_DEVENV_GRAMINE_${_GRAMINE}_GDB_SO:-@GRAMINE_GDB_SO@}
unset _GRAMINE

APPLICATION=
ENVS=()
PREFIX=()

if [ "$GDB" == "1" ]; then
    PREFIX=("gdb" "-q")
    if [ -n "$INSIDE_EMACS" ]; then
        PREFIX+=("-i=mi")
    fi

    PREFIX+=("-x" "$GRAMINE_GDB_PY")
    if [ -n "$GRAMINE_GDB_SO" ]; then
		ENVS+=("LD_PRELOAD=$GRAMINE_GDB_SO${LD_PRELOAD:+:$LD_PRELOAD}")
    fi

    if [ "$GDB_SCRIPT" != "" ]; then
        # Run a script in batch mode, and without TTY (so that it can be piped, redirected etc.)
        PREFIX+=("-x" "$GDB_SCRIPT" "-batch" "-tty=/dev/null")
    fi
    PREFIX+=("--args")
fi

if [ "$PERF" == "1" ]; then
    PREFIX=(perf stat)
fi

while [ "$1" != "" ];
do
    if [ "$APPLICATION" == "" ]; then
        APPLICATION=$1
        shift
        continue
    fi

    break
done

if [ "$APPLICATION" == "" ]; then
    echo "Usage: $0 [<application>] <args>..."
    exit 2
fi

if [ "$SGX" == "1" ] && [ ! -e "$APPLICATION.manifest.sgx" ]; then
    echo "Invalid application path specified ($APPLICATION.manifest.sgx does not exist)." >&2
    echo "The path should point to application configuration files, so that they can be" >&2
    echo "found after appending corresponding extensions." >&2
    exit 2
fi

if [ ! "$SGX" == "1" ] && [ ! -e "$APPLICATION.manifest" ]; then
    echo "Invalid application path specified ($APPLICATION.manifest does not exist)." >&2
    echo "The path should point to application configuration files, so that they can be" >&2
    echo "found after appending corresponding extensions." >&2
    exit 2
fi

if [ ! -f "$PAL_CMD" ]; then
    echo "$PAL_CMD not found"
    exit 1
fi

# shellcheck disable=SC2050
if [ "$SGX" == "1" ] \
&& [ @CONFIG_SGX_DRIVER@ = oot ] \
&& [ ! -e "$APPLICATION".token ] \
&& [ -f "$APPLICATION".sig ] \
&& [ -z "$GRAMINE_NO_AUTO_GET_TOKEN" ]
then
    @PREFIX@/@BINDIR@/gramine-sgx-get-token \
        --output "$APPLICATION".token \
        --sig "$APPLICATION".sig \
    >&2
fi


CMD=("${ENVS[@]}")
CMD+=("${PREFIX[@]}")
CMD+=("$PAL_CMD" "$LIBPAL_PATH" init "$APPLICATION" "$@")
exec env "${CMD[@]}"
