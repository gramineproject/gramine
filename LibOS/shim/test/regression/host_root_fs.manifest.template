loader.preload = "file:{{ gramine.libos }}"
libos.entrypoint = "{{ env.PWD }}/host_root_fs"
loader.argv0_override = "host_root_fs"

loader.env.LD_LIBRARY_PATH = "/lib"

fs.root.type = "chroot"
fs.root.path = "/"
fs.root.uri = "file:/"

fs.mount.gramine_lib.type = "chroot"
fs.mount.gramine_lib.path = "/lib"
fs.mount.gramine_lib.uri = "file:{{ gramine.runtimedir() }}"

sgx.nonpie_binary = true

sgx.trusted_files = [
  "file:{{ gramine.runtimedir() }}/",
  "file:{{ env.PWD }}/host_root_fs",
]
